{
  "name": "@miletorix/vitepress-back-to-top-button",
  "type": "module",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/miletorix/vitepress-back-to-top-button"
  },
  "homepage": "https://miletorix.github.io/vitepress-back-to-top-button/",
  "description": "A lightweight Back-to-Top button Vue 3 component for VitePress. Features smooth scroll, progress ring indicating scroll percentage, dark/light theme support.",
  "main": "./dist/back-to-top-button.umd.js",
  "module": "./dist/back-to-top-button.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/back-to-top-button.es.js",
      "require": "./dist/back-to-top-button.umd.js"
    },
    "./style.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vue-tsc --declaration --emitDeclarationOnly && vite build",
    "clean": "rimraf dist node_modules .vite .turbo",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vitepress": "^1.6.3",
    "vue": "^3.0.0"
  },
  "keywords": [
    "vitepress",
    "vitepress plugin",
    "vue",
    "vue3",
    "vue component",
    "back to top",
    "back-to-top button",
    "dark mode",
    "light theme",
    "vitepress enhancement",
    "vitepress ui",
    "vitepress component",
    "vitepress back to top"
  ],
  "author": "miletorix",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.0",
    "vitepress": "^1.6.3",
    "vue-tsc": "^3.0.0"
  }
}
